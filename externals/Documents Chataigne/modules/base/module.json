{
  "name":"Base",
  "type":"OSC",
  "path":"Sans Gravité",

  "version":"1.0.1",
  "description":"Contrôle simplifiée d\'une lampe animatronique ",


  "hasInput":true,
  "hasOutput":true,

  "hideDefaultCommands":true,

  "defaults":
  {
    "autoAdd":false,
    "oscInput":
    {
      "localPort":10001
    },

		"OSC Outputs":
		{
			"OSC Output":
      {
        "local":false,
        "remoteHost":" ",
        "remotePort":9000
      }
    }
  },

  "parameters":
  {
    "Invocation":
    {
      "type":"Trigger"
    },
    "Carte SD Detectee":
    {
      "type":"Boolean",
      "readOnly":true
    },
    "Vitesse Cou":
    {
      "type":"Integer",
      "min": -1000,
      "max": 1000,
      "default": 0
    },
    "Vitesse Pied":
    {
      "type":"Integer",
      "min": -1000,
      "max": 1000,
      "default": 0
    },
    "Vitesse Max Rotation":
    {
      "type":"Integer",
      "min": 0,
      "max": 500,
      "default": 500
    },
    "Position Stepper":
    {
      "type":"Float",
      "default": 0,
      "readOnly":true
    }
  },

  "hideDefaultParameters": ["useHierarchy",  "autoFeedback", "autoAdd", "colorSendMode", "oscInput/localPort", "oscOutputs/oscOutput/local", "oscOutputs/oscOutput/remotePort", "oscOutputs/oscOutput/listenToFeedback"],

  "scripts":
  [
    "base.js"
  ],

  "values":
  {
    "Batterie":
    {
      "type":"Float",
      "min": 0,
      "max": 1,
      "readOnly": true
    },
    "Cou":
    {
      "type":"Float",
      "min":0,
      "max":1,
      "default":0.5
    },
    "Pied":
    {
      "type":"Float",
      "min":0,
      "max":1,
      "default":0.5
    },
    "Vitesse Rotation":
    {
      "type":"Float",
      "min":-1,
      "max":1,
      "default":0
    }
  },

  "commands":
  {
    "Angle Cou":
    {
      "menu":"Position",
      "callback":"setNeck",
      "parameters":
      {
        "Value":
        {
          "type":"Float",
          "min":0,
          "max":1,
          "default":0
        }
      }
    },
    "Vitesse Cou":
    {
      "menu":"Vitesse",
      "callback":"rotateNeck",
      "parameters":
      {
        "Value":
        {
          "type":"Integer",
          "min":-1000,
          "max":1000,
          "default":0
        }
      }
    },
    "Angle Pied":
    {
      "menu":"Position",
      "callback":"setFoot",
      "parameters":
      {
        "Value":
        {
          "type":"Float",
          "min":0,
          "max":1,
          "default":0
        }
      }
    },
    "Vitesse Pied":
    {
      "menu":"Vitesse",
      "callback":"rotateFoot",
      "parameters":
      {
        "Value":
        {
          "type":"Integer",
          "min":-1000,
          "max":1000,
          "default":0
        }
      }
    },
      "Rotation Absolue":
      {
        "menu":"Position",
        "callback":"stepperGo",
        "parameters":
        {
          "Value":
          {
            "type":"Float",
            "default":0
          }
        }
      },
        "Rotation Relative":
        {
          "menu":"Position",
          "callback":"stepperMove",
          "parameters":
          {
            "Value":
            {
              "type":"Float",
              "default":0
            }
          }
        },
      "Vitesse Rotation":
      {
        "menu":"Vitesse",
        "callback":"setRotationSpeed",
        "parameters":
        {
          "Value":
          {
            "type":"Float",
            "min":-1,
            "max":1,
            "default":0
          }
        }
      },
      "Lancer Sequence":
      {
        "menu":"Sequence",
        "callback":"playSequence",
        "parameters":
        {
          "Name":
          {
            "type":"String"
          },
          "FPS":
          {
            "type":"Integer",
            "min":0,
            "max":200,
            "default":30
          }
        }
      },
        "Arrêter Sequence":
        {
          "menu":"Sequence",
          "callback":"stopSequence",
          "parameters":
          {
          }
        }

  }
}
