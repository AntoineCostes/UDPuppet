{
  "name":"Ampoule",
  "type":"OSC",
  "path":"Sans Gravité",

  "version":"1.4.0",
  "description":"Contrôle simplifiée d\'une lampe animatronique ",


  "hasInput":true,
  "hasOutput":true,

  "hideDefaultCommands":true,

  "defaults":
  {
    "autoAdd":false,
    "OSC Input":
    {
      "localPort":10000
    },

		"OSC Outputs":
		{
			"OSC Output":
      {
        "local":false,
        "remoteHost":"ampoule.local",
        "remotePort":9000
      }
    }
  },

  "parameters":
  {
    "Version":
    {
      "type":"String",
      "default":"Avril2022-1.4.0",
      "readOnly":true
    },
    "IP":
    {
      "type":"String",
      "default":"",
      "readOnly":true
    },
    "Invocation":
    {
      "type":"Trigger"
    },
    "Sequences":
    {
      "type":"Enum"
    },
    "Play":
    {
      "type":"Trigger"
    },
    "Yeux":
    {
      "type":"Boolean"
    },
    "Intensite Couleur":
    {
      "type":"Float",
      "min": 0,
      "max": 1,
      "default": 0.2
    },
    "Led debug":
    {
      "type":"Boolean",
      "default":true
    }
  },

  "hideDefaultParameters": ["useHierarchy",  "autoFeedback", "autoAdd", "colorSendMode", "pass_through", "oscInput/local", "oscOutputs/oscOutput/local", "oscOutputs/oscOutput/remotePort", "oscOutputs/oscOutput/listenToFeedback"],

  "scripts":
  [
    "ampoule.js"
  ],

  "values":
  {
    "Batterie":
    {
      "type":"Float",
      "min": 0,
      "max": 1,
      "readOnly": true
    },
    "Carte SD Detectee":
    {
      "type":"Boolean",
      "readOnly":true
    }
  },

  "commands":
  {
    "Modifier couleur":
    {
      "menu":"Tete",
      "callback":"setColor",
      "parameters":
      {
        "Couleur":
        {
          "type":"Color"
        }
      }
    },
    "Modifier angle":
    {
      "menu":"Tete",
      "callback":"setHeadAngle",
      "parameters":
      {
        "Value":
        {
          "type":"Float",
          "min":0,
          "max":1,
          "default":0
        }
      }
    },
    "Modifier Vitesse":
    {
      "menu":"Tete",
      "callback":"rotateSpeed",
      "parameters":
      {
        "Value":
        {
          "type":"Integer",
          "min":-1000,
          "max":1000,
          "default":0
        }
      }
    },
    "Lancer Sequence":
    {
      "menu":"Sequence",
      "callback":"playSequence",
      "parameters":
      {
        "Name":
        {
          "type":"String"
        },
        "FPS":
        {
          "type":"Integer",
          "min":0,
          "max":200,
          "default":30
        }
      }
    },
      "Arrêter Sequence":
      {
        "menu":"Sequence",
        "callback":"stopSequence",
        "parameters":
        {
        }
      }
  }
}
