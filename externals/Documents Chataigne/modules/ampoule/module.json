{
  "name":"Ampoule",
  "type":"OSC",
  "path":"Sans Gravité",

  "version":"1.0.1",
  "description":"Contrôle simplifiée d\'une lampe animatronique ",


  "hasInput":true,
  "hasOutput":true,

  "hideDefaultCommands":true,

  "defaults":
  {
    "autoAdd":false,
    "oscInput":
    {
      "localPort":10000
    },

		"OSC Outputs":
		{
			"OSC Output":
      {
        "local":false,
        "remoteHost":" ",
        "remotePort":9000
      }
    }
  },

  "parameters":
  {
    "Invocation":
    {
      "type":"Trigger"
    },
    "Yeux":
    {
      "type":"Boolean"
    },
    "Led debug":
    {
      "type":"Boolean"
    },
    "Intensite Couleur":
    {
      "type":"Float",
      "min": 0,
      "max": 1,
      "default": 0.5
    },
    "Couleur":
    {
      "type":"Color",
      "default":[0, 0, 0, 1]
    },
    "Vitesse Rotation":
    {
      "type":"Integer",
      "min": -1000,
      "max": 1000,
      "default": 0
    },
    "Angle":
    {
      "type":"Float",
      "min":0,
      "max":1,
      "default":0.5
    }
  },

  "hideDefaultParameters": ["useHierarchy",  "autoFeedback", "autoAdd", "colorSendMode", "oscInput/localPort", "oscOutputs/oscOutput/local", "oscOutputs/oscOutput/remotePort", "oscOutputs/oscOutput/listenToFeedback"],

  "scripts":
  [
    "ampoule.js"
  ],

  "values":
  {
    "Batterie":
    {
      "type":"Float",
      "min": 0,
      "max": 1,
      "readOnly": true
    },
    "Carte SD Detectee":
    {
      "type":"Boolean",
      "readOnly":true
    }
  },

  "commands":
  {
    "Couleur":
    {
      "menu":"Tete",
      "callback":"setColor",
      "parameters":
      {
        "Couleur":
        {
          "type":"Color",
          "default":[0, 1, 0, 1]
        }
      }
    },
    "Angle":
    {
      "menu":"Tete",
      "callback":"setHeadAngle",
      "parameters":
      {
        "Value":
        {
          "type":"Float",
          "min":0,
          "max":1,
          "default":0
        }
      }
    },
    "Vitesse Rotation":
    {
      "menu":"Tete",
      "callback":"rotateSpeed",
      "parameters":
      {
        "Value":
        {
          "type":"Integer",
          "min":-1000,
          "max":1000,
          "default":0
        }
      }
    },
    "Lancer Sequence":
    {
      "menu":"Sequence",
      "callback":"playSequence",
      "parameters":
      {
        "Name":
        {
          "type":"String"
        },
        "FPS":
        {
          "type":"Integer",
          "min":0,
          "max":200,
          "default":30
        }
      }
    },
      "Arrêter Sequence":
      {
        "menu":"Sequence",
        "callback":"stopSequence",
        "parameters":
        {
        }
      }
  }
}
