{
  "name":"Roomba",
  "type":"OSC",
  "path":"cie AMK",

  "version":"1.0.0",
  "description":"OSC control of Roomba vacuum cleaner with ESP32",


  "hasInput":true,
  "hasOutput":true,

  "hideDefaultCommands":true,

  "defaults":
  {
    "autoAdd":false,
    "OSC Input":
    {
      "localPort":10005
    },

		"OSC Outputs":
		{
			"OSC Output":
      {
        "local":false,
        "remoteHost":" ",
        "remotePort":9000
      }
    }
  },

  "parameters":
  {
    "Invocation":
    {
      "type":"Trigger"
    },
    "Carte SD Detectee":
    {
      "type":"Boolean",
      "readOnly":true
    },
    "Batterie":
    {
      "type":"Float",
      "min": 0,
      "max": 1,
      "readOnly": true
    }
  },

  "hideDefaultParameters": ["useHierarchy",  "autoFeedback", "autoAdd", "colorSendMode", "oscInput/localPort", "oscOutputs/oscOutput/local", "oscOutputs/oscOutput/remotePort", "oscOutputs/oscOutput/listenToFeedback"],

  "scripts":
  [
    "roomba.js"
  ],

  "values":
  {

  },

  "commands":
  {
    "Move":
    {
      "callback":"move",
      "parameters":
      {
        "Direction":
        {
          "type":"Enum",
          "options":{"forwards":"0", "left":"1", "right":"2", "backwards":"3"}
        }
      }
    },
    "Stop":
    {
      "callback":"stop",
    },
    "Display text":
    {
      "callback":"displayText",
      "parameters":
      {
        "Text":
        {
          "type":"String",
          "default":"Hello world!"
        }
      }
    },
    "Set led":
    {
      "callback":"setLed",
      "parameters":
      {
        "Led":
        {
          "type":"Enum",
          "options":{"home":"0", "spot":"1", "warning":"3", "dirt":"4"}
        },
        "Value":
        {
          "type":"Boolean"
        }
      }
    },
    "Play note":
    {
      "callback":"playNote",
      "parameters":
      {
        "Pitch":
        {
          "type":"Int",
          "min":31,
          "max":127,
          "default":64
        }
      }
    }
  }
}
